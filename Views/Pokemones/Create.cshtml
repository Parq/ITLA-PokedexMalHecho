@model PokedexMalHecho.Models.Pokemones

@{
    ViewData["Title"] = "Creación Pokemon";
}

<h1>Creación Pokemon</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Tipo1" class="control-label">Tipo 1:</label>
                    <select asp-for="Tipo1" class="form-control" asp-items="ViewBag.Tipo1">
                        <option>Seleccionar Tipo</option>
                    </select>
                </div>
                <div class="col">
                    <label asp-for="Tipo2" class="control-label">Tipo 2:</label>
                    <select asp-for="Tipo2" class="form-control" asp-items="ViewBag.Tipo2">
                        <option>Seleccionar Tipo</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Region" class="control-label">Región:</label>
                <select asp-for="Region" class ="form-control" asp-items="ViewBag.Region">
                    <option>Seleccionar Región</option>
                </select>
            </div>

            <div class="row">
                <div class="col">
                    <label asp-for="Ataque1" class="control-label">Ataque 1:</label>
                    <input asp-for="Ataque1" class="form-control" />
                    <span asp-validation-for="Ataque1" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Ataque2" class="control-label">Ataque 2:</label>
                    <input asp-for="Ataque2" class="form-control" />
                    <span asp-validation-for="Ataque2" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <label asp-for="Ataque3" class="control-label">Ataque 3:</label>
                    <input asp-for="Ataque3" class="form-control" />
                    <span asp-validation-for="Ataque3" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Ataque4" class="control-label">Ataque 4:</label>
                    <input asp-for="Ataque4" class="form-control" />
                    <span asp-validation-for="Ataque4" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row" style="margin-top:20px">
                <div class="col">
                    <input type="submit" value="Crear" class="btn btn-primary" /> |
                    <a asp-action="Index">Volver a Listado</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
