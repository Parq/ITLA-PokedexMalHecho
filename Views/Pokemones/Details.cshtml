@model PokedexMalHecho.Models.Pokemones

@{
    ViewData["Title"] = "Detalles";
    var photoPath = "~/images/" + (Model.Photo ?? "noimage.jpg");
}

<h1>Detalles</h1>

<div>
    <hr />
</div>

<div class="card mb-3" sytle="max-width:540px">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@photoPath" asp-append-version="true" class="card-img" alt=""/>
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
                <p class="card-text">Región: @Html.DisplayFor(model => model.RegionNavigation.Nombre)</p>
                <p class="card-text">Tipos: @Html.DisplayFor(model => model.Tipo1Navigation.Nombre) y @Html.DisplayFor(model => model.Tipo2Navigation.Nombre)</p>
                <p class="card-text">Atáques: @Html.DisplayFor(model => model.Ataque1), @Html.DisplayFor(model => model.Ataque2), @Html.DisplayFor(model => model.Ataque3), @Html.DisplayFor(model => model.Ataque4)</p>
                <p class="card-text"></p>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a Listado</a>
</div>
