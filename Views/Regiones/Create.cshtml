@model PokedexMalHecho.Models.Regiones

@{
    ViewData["Title"] = "Creación Región";
}

<h1>Crear Región</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoRga" class="control-label">Código RGBA:</label>
                <input asp-for="CodigoRga" class="form-control" />
                <span asp-validation-for="CodigoRga" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <input type="submit" value="Crear" class="btn btn-primary" /> |
                    <a asp-action="Index">Volver a Listado</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
